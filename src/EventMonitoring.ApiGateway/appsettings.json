{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsOrigin": "http://localhost:4200",
  "ReverseProxy": {
    "Routes": {
      "configuration-route": {
        "ClusterId": "configuration-cluster",
        "Match": {
          "Path": "/api/configuration/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/configuration"
          }
        ]
      },
      "historical-route": {
        "ClusterId": "historical-cluster",
        "Match": {
          "Path": "/api/historical/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/historical"
          }
        ]
      },
      "telemetry-hub-route": {
        "ClusterId": "telemetry-cluster",
        "Match": {
          "Path": "/telemetry"
        }
      }
    },
    "Clusters": {
      "configuration-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "historical-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "telemetry-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      }
    }
  }
}
